body {
	display: flex;
	flex-direction: column;
	height: 100%;
	min-height: 100vh;

	.title,
	.subtitle {
		font-family: $heading-font;
	}

	.title {
		&:first-child {
			margin-top: 0;
		}
	}

	#header,
	#footer {
		flex: none;
	}

	.container {
		+above($widescreen) {
			max-width: 1152px;
		}
	}

	&.page-secondary {
		.header {
			.container {
				max-width: 100%;
				width: 100%;

				> .navbar {
					margin: 0;
				}
			}
		}
	}

	.button {
		transition: all 0.2s;
	}

	.button.is-small {
		border-radius: 5px;
	}

	.button.is-primary {
		&:not(.is-outlined) {
			box-shadow: 0 2px 2px 0 rgba(0,0,0,0.28);
		}

		&.is-outlined {
			border-color: $button-border-color;
		}
	}

	ul li {
		padding-top: 0.25em;
		padding-bottom: 0.25em;
	}

	li ul, li ol {
		margin:0.5 1.5em;
	}
	ul, ol {
		margin:0 1.5em 1.5em 1.5em;
	}
	ul {
		list-style-type:disc;
	}
	ol {
		list-style-type:decimal;
	}
	ol ol {
		list-style: upper-alpha;
	}
	ol ol ol {
		list-style: lower-roman;
	}
	ol ol ol ol {
		list-style: lower-alpha;
	}
	dl {
		margin:0 0 1.5em 0;
	}
	dl dt {
		font-weight:bold;
	}
	dd {
		margin-left:1.5em;
	}

	code {
		line-height: normal;
	}

	p,
	blockquote,
	pre,
	address,
	dl,
	ol,
	ul,
	table {
		margin-bottom: 1.25rem;
	}
}

