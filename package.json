    "chokidar": "~1.7.0",
    "glob": "~7.1.2",
    "semver": "~5.4.1",
    "shelljs": "~0.7.8",
    "tslint": "~5.7.0",
    "typedoc": "~0.8.0",
    "typescript": "~2.4.2"
  },
  "devDependencies": {
    "@types/chalk": "~0.4.31",
    "@types/chokidar": "~1.7.2",
    "@types/glob": "~5.0.32",
    "@types/semver": "~5.4.0",
    "@types/shelljs": "~0.7.4",
    "ts-node": "~3.3.0"
  },
  "bugs": "https://github.com/theintern/dev/issues",
  "keywords": [
