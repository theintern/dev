{
  "name": "@theintern/dev",
  "version": "0.10.2-pre",
  "description": "Development support scripts for Intern projects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/theintern/dev.git"
  },
  "license": "BSD-3-Clause",
  "files": [
    "*.js",
    "*.d.ts",
    "*.json"
  ],
  "dependencies": {
    "chalk": "~2.4.2",
    "chokidar": "~3.0.1",
    "glob": "~7.1.4",
    "lint-staged": "~8.2.0",
    "pre-commit": "~1.2.2",
    "prettier": "~1.17.1",
    "resolve": "~1.11.1",
    "semver": "~6.1.1",
    "shelljs": "~0.8.3",
    "tslint": "~5.17.0",
    "tslint-config-prettier": "~1.18.0",
    "typedoc": "~0.15.0-0",
    "typescript": "~3.3.4000"
  },
  "devDependencies": {
    "@types/glob": "~7.1.1",
    "@types/resolve": "~0.0.8",
    "@types/semver": "~6.0.0",
    "@types/shelljs": "~0.8.5",
    "ts-node": "~8.2.0"
  },
  "peerDependencies": {
    "lint-staged": "^8.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.0",
    "tslib": "^1.9.3"
  },
  "bugs": "https://github.com/theintern/dev/issues",
  "keywords": [
    "intern"
  ],
  "homepage": "http://gitub.com/theintern/dev",
  "bin": {
    "intern-dev-api": "./intern-dev-api.js",
    "intern-dev-build": "./intern-dev-build.js",
    "intern-dev-clean": "./intern-dev-clean.js",
    "intern-dev-lint": "./intern-dev-lint.js",
    "intern-dev-release": "./intern-dev-release.js",
    "intern-dev-test": "./intern-dev-test.js"
  },
  "scripts": {
    "build": "npm run clean && ts-node ./src/intern-dev-build.ts",
    "clean": "ts-node ./src/intern-dev-clean.ts",
    "release": "npm run lint && ts-node ./src/intern-dev-release.ts",
    "lint": "ts-node ./src/intern-dev-lint.ts",
    "devpack": "ts-node ./src/intern-dev-build && npm pack ./_build/src",
    "precommit": "lint-staged"
  },
  "internDev": {
    "resources": {
      "_build/src": [
        "tslint.json",
        "tsconfig-base.json",
        "prettier.config.js"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json,css}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "ts*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-commit": "precommit"
}