{
  "name": "@theintern/dev",
  "version": "0.4.4-pre",
  "description": "Development support scripts for Intern projects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/theintern/dev.git"
  },
  "license": "BSD-3-Clause",
  "files": [
    "*.js",
    "*.d.ts",
    "*.json"
  ],
  "dependencies": {
    "bulma": "~0.5.1",
    "chalk": "~2.0.1",
    "chokidar": "~1.7.0",
    "ejs": "~2.5.7",
    "glob": "~7.1.2",
    "markdown-it-anchor": "~4.0.0",
    "markdown-it-highlightjs": "~3.0.0",
    "metalsmith": "~2.3.0",
    "metalsmith-assets": "~0.1.0",
    "metalsmith-collections": "~0.9.0",
    "metalsmith-headings": "~0.2.0",
    "metalsmith-layouts": "~1.8.1",
    "metalsmith-markdownit": "~0.4.0",
    "metalsmith-matters": "~1.2.0",
    "metalsmith-packagejson": "~1.1.0",
    "metalsmith-serve": "0.0.7",
    "metalsmith-watch": "~1.0.3",
    "rm": "~0.1.8",
    "semver": "~5.3.0",
    "shelljs": "~0.7.7",
    "stylus": "~0.54.5",
    "tslint": "~5.6.0",
    "typescript": "~2.4.1"
  },
  "devDependencies": {
    "@types/chalk": "~0.4.31",
    "@types/chokidar": "~1.6.0",
    "@types/glob": "~5.0.30",
    "@types/node": "~7.0.23",
    "@types/node-sass": "~3.10.32",
    "@types/semver": "~5.3.31",
    "@types/shelljs": "~0.7.1",
    "node-sass": "~4.5.3",
    "ts-node": "~3.1.0"
  },
  "bugs": "https://github.com/theintern/dev/issues",
  "keywords": [
    "intern"
  ],
  "homepage": "http://gitub.com/theintern/dev",
  "bin": {
    "intern-dev-build": "./intern-dev-build.js",
    "intern-dev-clean": "./intern-dev-clean.js",
    "intern-dev-doc": "./intern-dev-doc.js",
    "intern-dev-lint": "./intern-dev-lint.js",
    "intern-dev-release": "./intern-dev-release.js",
    "intern-dev-test": "./intern-dev-test.js"
  },
  "scripts": {
    "build": "ts-node ./src/intern-dev-build.ts && ts-node ./support/build_styles.ts",
    "clean": "ts-node ./src/intern-dev-clean.ts",
    "release": "npm run lint && ts-node ./src/intern-dev-release.ts",
    "lint": "ts-node ./src/intern-dev-lint.ts"
  },
  "internDev": {
    "resources": {
      "_build/src": [
        "tslint.json",
        {
          "base": "resources",
          "pattern": "**/*"
        }
      ]
    }
  }
}
